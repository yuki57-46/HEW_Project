# editorconfig

[*]
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 4

[*.{cpp,h,hpp}]
indent_style = tab

[*.hlsl]
indent_style = tab
charset = utf-8-bom
trim_trailing_whitespace = false
insert_final_newline = false
